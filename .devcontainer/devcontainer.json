{
    "name": "Wealth-Ops Dev",
    "dockerComposeFile": [
        "../docker-compose.yml"
    ],
    "service": "dev",
    "workspaceFolder": "/workspaces/wealth-ops",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.mypy-type-checker",
                "charliermarsh.ruff"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.testing.pytestEnabled": true,
                "editor.formatOnSave": true
            }
        }
    },
    "postCreateCommand": "poetry install --with infra",
    "shutdownAction": "stopCompose",
    "forwardPorts": [
        4566
    ],
    "remoteUser": "vscode"
}